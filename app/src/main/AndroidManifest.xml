<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gaukhar.dauzhan.bookapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".intro_slides.IntroActivity"
            android:label="Intro">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN"/> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadActivity"
            android:label="activity_read"
            android:launchMode="singleTop" />
        <activity
            android:name=".MyListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="activity_settings"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadActivity" />
        </activity>
        <activity android:name=".DrawerActivity" />
        <activity
            android:name=".AboutAppActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadActivity" />
        </activity>
        />
        <activity android:name=".Fragments.QuizActivity"></activity>
    </application>

</manifest>