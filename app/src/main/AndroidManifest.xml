<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gaukhar.dauzhan.bookapp">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".IntroActivity"
            android:label="Intro">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadPagerActivity"
            android:label="activity_read_pager"
            android:launchMode="singleTop" />
        <activity
            android:name=".MyListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadPagerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadPagerActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="activity_settings"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadPagerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadPagerActivity" />
        </activity>
        <activity android:name=".DrawerActivity" />

        <provider
            android:name=".data.BookListContentProvider"
            android:authorities="com.gaukhar.dauzhan.bookapp"
            android:exported="false" />

        <activity
            android:name=".AboutAppActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ReadPagerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gaukhar.dauzhan.bookapp.ReadPagerActivity" />
        </activity>
        />

    </application>

</manifest>