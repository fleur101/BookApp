<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gaukhar.dauzhan.bookapp.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message"
        android:textSize="30sp"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tv_welcome"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="150dp"

        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_book_lover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_book_lover"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="5dp"
         />


    <ImageView
        android:id="@+id/iv_icon_opeing"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/book_opening2"
        android:contentDescription="@string/book_opening_img" />

</LinearLayout>
